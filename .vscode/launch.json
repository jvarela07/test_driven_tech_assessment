{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Debug TS with ts-node",
        "runtimeArgs": ["-r", "ts-node/register"],
        "args": ["${workspaceFolder}/tests/main.ts"],
        "cwd": "${workspaceFolder}",
        "protocol": "inspector",
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen"
      }
    ]
  }
  